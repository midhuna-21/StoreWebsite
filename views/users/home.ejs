<%- include('../layouts/header.ejs') %>

   <!-- Main Banner -->
   <section class="relative bg-[#F5F5DC] text-gray-800">
       <div class="container mx-auto px-6 py-20">
           <h1 class="text-4xl font-bold mb-4">Shop the Best Deals</h1>
           <p class="text-xl mb-8">Huge discounts on top products!</p>
           <button class="bg-yellow-500 text-white py-2 px-6 rounded-lg">Shop Now</button>
       </div>
       <div class="absolute top-0 right-4 bg-white p-6 m-5 rounded-lg shadow-lg">
           <img src="/images/bannerFurniture.jpg" alt="Promo Banner" class="rounded-lg" style="width: 370px; height: 330px;">
       </div>
   </section>

   <!-- Product Grid -->
   <section class="container mx-auto px-6 py-16 bg-gray-50">
    <h2 class="text-3xl font-bold mb-8 text-gray-800">Latest Products</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <% products.forEach(product => { %>
            <div 
            class="bg-white shadow-md hover:shadow-xl rounded-lg overflow-hidden transition-transform transform hover:scale-105 cursor-pointer product-card" 
            data-id="<%= product.id %>">  <img src="uploadProduct/<%= product.image[0] %>" alt="Product Image" class="w-full h-48 object-fit">
            <div class="p-6">
                <h3 class="font-semibold text-lg text-gray-800 mb-2"><%= product.productname %></h3>
                <p class="text-gray-500 text-red-500 text-sm line-through">₹<%= product.productprice %></p>
                <p class="text-xl font-bold text-blue-600">₹<%= product.salesprice %></p>
            </div>
        </div>
        <% }) %>
    </div>
</section>


