<!DOCTYPE html>
<html lang="en">
    <head>
	<title>Halang Furnitures</title>
	<meta charset="UTF-8">

	<meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.tailwindcss.com"></script>
	<!--===============================================================================================-->
	<link rel="icon" href=" /assets/imgs/theme/Black White Logo.png">
	<!--===============================================================================================-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    </head>
    <body>
        <!-- Black Background Section -->
        <div class="w-full bg-black h-10"></div>

        <!-- Header Section -->
        <nav class="flex items-center justify-between bg-white px-6 py-4">
            <!-- Website Name -->
            <div class="text-2xl font-serif font-bold text-[#333333] tracking-wide">
                Halang
            </div>
            
            <!-- Navigation Links -->
            <div class="flex-1 flex justify-center space-x-6 text-md font-medium">
                <a href="#"
                   class="hover:text-gray-500 text-black border-b-2 border-transparent hover:border-gray-500"
                   id="home-link">Home</a>
                <a href="#"
                   class="hover:text-gray-500 text-black border-b-2 border-transparent hover:border-gray-500"
                   id="shop-link">Shop</a>
            </div>

            <!-- Icons Section -->
            <div class="flex items-center space-x-6 relative">
                <!-- Profile -->
                <div class="group relative">
                    <a href="#" class="text-gray-700 hover:text-black">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M15.75 9A3.75 3.75 0 1112 5.25 3.75 3.75 0 0115.75 9zM18.75 19.5a7.5 7.5 0 00-13.5 0" />
                        </svg>
                    </a>
                    <span
                        class="absolute top-full mt-1 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 group-hover:opacity-100"
                        >Profile</span
                    >
                </div>

                <!-- Cart -->
                <div class="relative group">
                    <a
                        href="#"
                        class="hover:text-gray-400 flex flex-col items-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 4.5h16.5l-1.35 9.797a3 3 0 01-2.985 2.703H8.085a3 3 0 01-2.985-2.703L3.75 4.5zm0 0L2.625 1.875M10.5 21.375a1.875 1.875 0 100-3.75 1.875 1.875 0 000 3.75zM18 21.375a1.875 1.875 0 100-3.75 1.875 1.875 0 000 3.75z" />
                        </svg>
                    </a>
                    <span
                        class="absolute top-full mt-1 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 group-hover:opacity-100"
                        >Cart</span
                    >
                </div>

                <!-- Wishlist -->
                <div class="group relative">
                    <a href="#" class="text-gray-700 hover:text-black">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                        </svg>
                    </a>
                    <span
                        class="absolute top-full mt-1 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 group-hover:opacity-100"
                        >Wishlist</span
                    >
                </div>

                <!-- Logout -->
                <div class="group relative">
                    <a href="/logout" class="text-gray-700 hover:text-black">
                        <!-- Logout Icon -->
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            class="w-6 h-6">
                            <path
                                fill-rule="evenodd"
                                d="M9.47 13.53a.75.75 0 010-1.06l2.25-2.25a.75.75 0 011.06 1.06l-1.47 1.47H21a.75.75 0 010 1.5H11.31l1.47 1.47a.75.75 0 01-1.06 1.06l-2.25-2.25z"
                                clip-rule="evenodd" />
                            <path
                                fill-rule="evenodd"
                                d="M4.5 6.75a.75.75 0 00-.75.75v9.5a.75.75 0 00.75.75h5a.75.75 0 010 1.5h-5A2.25 2.25 0 012.25 17V7A2.25 2.25 0 014.5 4.75h5a.75.75 0 010 1.5h-5z"
                                clip-rule="evenodd" />
                        </svg>

                    </a>
                    <span
                        class="absolute top-full mt-1 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 group-hover:opacity-100"
                        >Logout</span
                    >
                </div>
            </div>
        </nav>

        <script>
            const homeLink = document.getElementById('home-link');
            const shopLink = document.getElementById('shop-link');
            
            function setActive(link) {
                homeLink.classList.remove('border-gray-500');
                shopLink.classList.remove('border-gray-500');
                link.classList.add('border-gray-500');
            }
        
            homeLink.addEventListener('click', function() {
                setActive(homeLink);
            });
        
            shopLink.addEventListener('click', function() {
                setActive(shopLink);
            });
        </script>
